<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/text_bg_color</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/teal_200</item>
    </style>

    <style name="AppTheme.SearchView" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColorHint">#fff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:tint">@color/white</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:searchIcon">@drawable/ic_baseline_search_24</item>

    </style>

    <style name="SearchViewTheme" parent="AppTheme">
        <item name="android:maxWidth">10000dp</item>
        <item name="android:textColorHint">#fff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:tint">@color/white</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:searchIcon">@drawable/ic_baseline_search_24</item>
    </style>

    <style name="CustomTheme" parent="AppTheme">
        <item name="backgroundTint">@color/text_bg_color</item>
        <item name="background">@drawable/splash</item>
        <item name="android:windowBackground">@color/text_bg_color</item>
    </style>

    <style name="Theme.Transparent" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="l">@color/black</item>
    </style>



</resources>